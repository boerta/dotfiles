# colors
hc set frame_border_active_color '#222222'
hc set frame_border_normal_color '#101010'
hc set frame_bg_normal_color '#565656'
hc set frame_bg_active_color '#345F0C'
hc set frame_border_width 1
hc set window_border_width 3
hc set window_border_inner_width 1
hc set window_border_normal_color '#454545'
#hc set window_border_active_color '#9fbc00'
hc set window_border_active_color red
hc set always_show_frame 1
hc set frame_bg_transparent 0
hc set frame_active_opacity 1
hc set frame_transparent_width 5
hc set frame_gap 4

# add overlapping window borders
hc set window_gap -2
hc set_attr settings.tabbed_max true
hc set_attr theme.title_font 'monospace:pixelsize=12'
hc set_attr theme.padding_top 1
hc set_attr theme.title_height 13
hc set_attr theme.title_depth 3
hc set_attr theme.title_when multiple_tabs
hc set frame_padding 2
hc set smart_window_surroundings 0
hc set smart_frame_surroundings 1
hc set mouse_recenter_gap 0
hc set focus_follows_mouse 1
